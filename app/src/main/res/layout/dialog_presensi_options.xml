<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:padding="0dp">


    <!-- Dialog utama dengan sisi melengkung -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dialogBox"
        android:layout_width="348dp"
        android:layout_height="181dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Container untuk menyusun kedua TextView secara horizontal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@null"
            android:padding="16dp">


            <TextView
                android:id="@+id/presensiPKL"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/custom_shape"
                android:drawableTop="@drawable/logo_presensi"
                android:gravity="center"
                android:padding="16dp"
                android:stateListAnimator="@animator/button_scale"
                android:text="Presensi PKL"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/presensiPKN"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/presensi_dialog"
                android:drawableTop="@drawable/logo_presensi"
                android:gravity="center"
                android:padding="16dp"
                android:stateListAnimator="@animator/button_scale"
                android:text="Presensi PKN"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>